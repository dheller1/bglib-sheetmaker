#:import argv sys.argv
<SlotFrame>:
    is_selected: False  # for ToggleButtonBehavior

    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 1000  # ms

    # drawing
    opacity: .7 if self.is_selected else .4

    canvas:
        Color:
            rgba: .08, .8, .8, .9
        Rectangle:
            size: self.size
            pos: self.pos

    canvas.after:
        Color:
            rgba: .2, 1, 1, 1
        Line:  # top
            points: [self.x, self.top, self.right, self.top]
        Line:  # left
            points: [self.x, self.y, self.x, self.top]
        Line:  # btm
            points: [self.x, self.y, self.right, self.y]
        Line:  # right
            points: [self.right, self.y, self.right, self.top]


<LabelListView>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


RootWidget:
    BoxLayout:
        size: root.size

        LabelListView:
            size_hint_x: .15
            id: label_list

        SheetImage:
            source: argv[1]
            allow_stretch: True
            slot_list: label_list